@page "/"
@model RPC_Autentication_Module.Pages.Users.LoginModel
@{ ViewData["Title"] = "Login"; }
<h1>Sign In</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="credential.UserName" class="control-label"></label>
                <input asp-for="credential.UserName" class="form-control" />
                <span asp-validation-for="credential.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credential.Password" class="control-label"></label>
                <input asp-for="credential.Password" class="form-control" />
                <span asp-validation-for="credential.Password" class="text-danger"></span>
                <label class="text-danger">@LoginModel.getMsg()</label>
            </div>
            <div>
                <div class="form-group" style="margin-right: 20px">
                    <input type="submit" value="SIGN IN" class="btn btn-primary" />
                </div>
               <div></div>
                <div class="form-group">
                    <label class="control-label"> New User </label>
                    <hr />
                    <input type="submit" value="SIGN UP" class="btn btn-primary" asp-page="Create" formnovalidate />
                </div>
            </div>
        </form>
    </div>
</div>